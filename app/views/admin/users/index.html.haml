%h1 Users Management
= link_to "New User", new_admin_user_path, class: "btn btn-primary"

%h1 Users List

%table
  %thead
    %tr
      %th Name
      %th Email
      %th Created At
      %th Actions
  %tbody
    - @users.each do |user|
      %tr
        %td= user.name
        %td= user.email
        %td= user.created_at.strftime("%Y-%m-%d %H:%M")
        %td
          = link_to "Edit", edit_admin_user_path(user), class: "btn btn-warning"
          = link_to "Delete", admin_user_path(user), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger"
